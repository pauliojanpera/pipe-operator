{
  "compilerOptions": {
		"target": "ES2015",
		"lib": ["ES2015", "ES2018.AsyncGenerator", "ES2018.AsyncIterable"],
 		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"rootDir": "src",
		"declaration": true,
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"strict": true,
		"traceResolution": false,
    "esModuleInterop": true,
		"inlineSourceMap": false,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"sourceMap": true,
    "types": ["jest"],
  },
	"include": ["src"],
	"compileOnSave": true
}
