{
	"compilerOptions": {
		"target": "ES2015",
		"lib": ["ES2015", "ES2018.AsyncGenerator", "ES2018.AsyncIterable"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"strict": true,
		"traceResolution": false,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"inlineSources": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"types": ["node", "jest"],
		"baseUrl": "src",
		"rootDir": "src"
	},
	"compileOnSave": true,
	"include": ["src"]
}
